
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
    integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
</head>

<body>
  <div class="container">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-3">
        <div class="d-flex flex-column p-3 text-white bg-dark" style="max-width: 280px; height: 100vh;">
          <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
            <img src="../public/images/assets/photoWall.svg" alt="" style="max-width: 70px">
            <span class="fs-4">Sidebar</span>
          </a>
          <hr>
          <ul class="nav nav-pills flex-column mb-auto sidebarPanel-list" data-id="<%= auth.uid %>">
            <li class="nav-item">
              <a class="nav-link text-white pointer active"data-block="albumList">
                <i class="fas fa-cabinet-filing mx-3"></i>
                Album list
              </a>
            </li>
            <li>
              <a class="nav-link text-white pointer" data-block="createAlbum">
                <i class="far fa-video-plus mx-3"></i>
                Create a new album
              </a>
            </li>
            <li>
              <a class="nav-link text-white pointer" data-block="order">
                <i class="fas fa-bookmark mx-3"></i>
                Orders
              </a>
            </li>
        
          </ul>
          <hr>
          <div class="dropdown">
            <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1"
              data-bs-toggle="dropdown" aria-expanded="false">
              <img src="https://github.com/mdo.png" alt="" width="32" height="32" class="rounded-circle me-2">
              <strong><%= auth.name %></strong>
            </a>
            <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
              <li><a class="dropdown-item" href="#">New project...</a></li>
              <li><a class="dropdown-item" href="#">Settings</a></li>
              <li><a class="dropdown-item" href="#">Profile</a></li>
              <li>
                <hr class="dropdown-divider">
              </li>
              <li><a class="dropdown-item" href="#">Sign out</a></li>
            </ul>
          </div>
        </div>
      </div>
      
      <!-- Content  -->
      <div class="col-6 offset-md-3 content">
        <div class="albumList content-block">
          <h1>Album list</h1>
          <ul class="list-group album-list">
            <% albumList.forEach( (album, index) => { %>
              <% if(index % 2 == 0) { %>
                <li class="list-group-item list-group-item-success pointer hide-details" data-id="<%= album._id %>">
                  <div class="d-flex justify-content-between align-items-center">
                    <h4 class="my-0"><%= album.name %></h4>
                    <i class="fas fa-caret-down"></i>
                  </div>
                  <hr>
                  <h5>Creared at:</h5>
                  <%= new Date(album.createdAt) %>
                  <div>
                  <h5>Tags: </h5>
                  <% album.tags.forEach(tag => { %>
                    <span class="badge m-3 rounded-pill bg-success"><%= tag %></span>
                  <% }) %>
                </div>
                  <h5>Description</h5>
                  <p><%= album.description %></p>
                  <button type="button" class="btn btn-success">Open<i class="ms-3 fas fa-sign-in-alt"></i></button>
                </li>
                <!-- even -->
                <% } else { %>
                  <li class="list-group-item list-group-item-light pointer hide-details" data-id="<%= album._id %>">
                    <div class="d-flex justify-content-between align-items-center">
                      <h4 class="my-0"><%= album.name %></h4>
                      <i class="fas fa-caret-down"></i>
                    </div>
                    <hr>
                    <h5>Creared at:</h5>
                    <%= new Date(album.createdAt) %>
                    <div>
                    <h5>Tags: </h5>
                    <% album.tags.forEach(tag => { %>
                      <span class="badge m-3 rounded-pill bg-info"><%= tag %></span>
                    <% }) %>
                  </div>
                    <h5>Description</h5>
                    <p><%= album.description %></p>
                    <button type="button" class="btn btn-info">Open<i class="ms-3 fas fa-sign-in-alt"></i></button>
                  </li>
              <% } %>
            <% }) %>
          </ul>
          <button type="button" class="newAlbumBtn btn btn-light text-dark">Add new album <i class="ms-3 fas fa-folder-plus"></i></button>
        </div>
        <!-- Create new albom form -->
        <form name="album" class="hidden content-block createAlbum" id="album" px-5">
          <h1 class="my-5 text-center">Create new album</h1>
          <div class="mb-3">
            <label for="uid" class="form-label"><%= auth.name %></label>
            <input name="uid" type="text" class="form-control"value="<%= auth.uid %>">
          </div>
          <div class="mb-3">
            <label for="name" class="form-label">Album name:</label>
            <input name="name" type="text" class="form-control" id="name" aria-describedby="emailHelp">
          </div>
          <div class="tagList">

          </div>
          <div class="input-group mb-3 d-flex">
            <input type="text" class="form-control tagInput" placeholder="Tag" aria-label="Tag" aria-describedby="apply-tag">
            <button class="btn btn-info" type="button" id="apply-tag">Button</button>
          </div>
    
          <div class="form-floating mb-3">
            <textarea name="description" class="form-control" placeholder="Leave a comment here"
              id="floatingTextarea"></textarea>
            <label for="floatingTextarea">Description</label>
          </div>
    
          <button type="submit" class="btn btn-primary">Submit</button>
          
        </form>

        <!-- Orders -->
        <div class="order hidden content-block">
          <h1>Orders</h1>
        </div>
      
      </div>
    </div>
  </div>






  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="/javascripts/userPanel/userSideBar.js"></script>
  <script src="/javascripts/userPanel/albumList.js"></script>
  <script src="/javascripts/userPanel/album.js"></script>


</body>

</html>