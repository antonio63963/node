<% layout('../layouts/userPanel') -%>
<% script("/javascripts/userPanel/albumList.js") -%>
<div class="albumList content-block">
  <h1>Album list</h1>
  <ul class="list-group album-list">
    <% payload.forEach( (album, index) => { %>
    <% if(index % 2 == 0) { %>
    <li class="list-group-item list-group-item-success pointer hide-details" data-id="<%= album._id %>">
      <div class="d-flex justify-content-between align-items-center">
        <h4 class="my-0"><%= album.name %></h4>
        <i class="fas fa-caret-down"></i>
      </div>
      <hr>
      <h5>Creared at:</h5>
      <%= new Date(album.createdAt) %>
      <div>
        <h5>Tags: </h5>
        <% album.tags.forEach(tag => { %>
        <span class="badge m-3 rounded-pill bg-success"><%= tag %></span>
        <% }) %>
      </div>
      <h5>Description</h5>
      <p><%= album.description %></p>
      <a href="/userPanel/album/<%= album._id %>">
        <button type="button" class="btn btn-success">Open<i class="ms-3 fas fa-sign-in-alt"></i></button>
      </a>
    </li>
    <!-- even -->
    <% } else { %>
    <li class="list-group-item list-group-item-light pointer hide-details" data-id="<%= album._id %>">
      <div class="d-flex justify-content-between align-items-center">
        <h4 class="my-0"><%= album.name %></h4>
        <i class="fas fa-caret-down"></i>
      </div>
      <hr>
      <h5>Creared at:</h5>
      <%= new Date(album.createdAt) %>
      <div>
        <h5>Tags: </h5>
        <% album.tags.forEach(tag => { %>
        <span class="badge m-3 rounded-pill bg-info"><%= tag %></span>
        <% }) %>
      </div>
      <h5>Description</h5>
      <p><%= album.description %></p>
      <a href="/userPanel/album/<%= album._id %>"></a>
      <button type="button" class="btn btn-info">Open<i class="ms-3 fas fa-sign-in-alt"></i></button>
      </a>
    </li>
    <% } %>
    <% }) %>
  </ul>
  <a href="/userPanel/albumForm">
    <button type="button" class="newAlbumBtn btn btn-light text-dark">Add new album <i
        class="ms-3 fas fa-folder-plus"></i></button>
  </a>
</div>