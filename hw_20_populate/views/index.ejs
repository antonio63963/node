<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <a href="http://localhost:3000/article/6128dc8c0f6290c59bc8f264">click me</a>
    <!-- BOOKS -->
    <h2>Existing articles</h2>
    <ul class="list-group articlesList">
      <% articlesList.forEach(art => { %>
        <li class="list-group-item articleTitle" data-id="<%= art._id %>"><a href="http://localhost:3000/article/<%= art._id%>"><%= art.title %></a></li>
      <% }) %>
    </ul>
    <div class="row">
      <button type="button" class="btn btn-primary col-6 mt-3 create-article">Create an article</button>
      <button type="button" class="btn btn-primary col-6 mt-3 search-article">Search an article</button>
    </div>
    <!-- CREATE AN ARTICLE -->
    <form name="article" class="d-none">
      <h2 class="mt-3">Create your article</h2>
      <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">@</span>
        <input type="text" class="form-control article_author" placeholder="author of article" aria-label="Username" aria-describedby="basic-addon1">
      </div>
      <div class="input-group">
        <span class="input-group-text" id="basic-addon1">@</span>
        <input type="text" class="form-control article_title" placeholder="title of article" aria-label="Username" aria-describedby="basic-addon1">
      </div>
      
      <div class="input-group mt-3">
        <span class="input-group-text">Text here</span>
        <textarea class="form-control article" aria-label="With textarea"></textarea>
      </div>
      <button type="submit" class="btn btn-primary col-12 mt-3">Publish</button>
    </form>
    <!-- ==========SEARCH================= -->
    <form name="search" class="d-none">
      <h2 class="mt-3">Find an article</h2>
      <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">@</span>
        <input type="text" class="form-control search_author" placeholder="find by author" aria-label="Username" aria-describedby="basic-addon1">
      </div>
      <div class="input-group">
        <span class="input-group-text" id="basic-addon1">@</span>
        <input type="text" class="form-control search_title" placeholder="find by title" aria-label="Username" aria-describedby="basic-addon1">
      </div>

      <button type="submit" class="btn btn-primary col-12 mt-3">Search</button>
    </form>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js" integrity="sha512-qTXRIMyZIFb8iQcfjXWCO8+M5Tbc38Qi5WzdPOYZHIlZpzBHG3L3by84BBBOiRGiEb7KKtAOAs5qYdUiZiQNNQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="javascripts/form.js"></script>
  </body>
</html>

