<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
        <!-- BOOKS -->
   
    <div class="container">
      <div class="row">
        <% books.forEach(book => { %>
          <div class="card mx-3" style="width: 18rem;">
            <img src="<%= book.pic %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= book.title %></h5>
              <div class="card_description">
                <p class="card-text"><%= book.description %></p>
              </div>
              <p>
                <% book.author.forEach( (auth, ind) => { %>
                  <% if(ind == book.author.length - 1) { %>
                    <%=auth.name%>
                  <% } else { %>
                  <%=auth.name + ","%>
                  <% } %>
                <% }) %>
              </p>
           

              <p>
                <% book.genre.forEach( (genre, ind) => { %>
                  <% if(ind == book.genre.length - 1) { %>
                    <%=genre.name%>
                  <% } else { %>
                  <%=genre.name + ","%>
                  <% } %>
                <% }) %>
              </p>
              <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
          </div>
        <% }) %>
      </div>
   
    </div>
    <ul class="list-group searchBookList">
      <!-- <li class="list-group-item">An item</li>
      <li class="list-group-item">A second item</li>
      <li class="list-group-item">A third item</li>
      <li class="list-group-item">A fourth item</li>
      <li class="list-group-item">And a fifth one</li> -->
    </ul>
    <!-- ==========SEARCH================= -->
    <form name="search" class="">
      <h2 class="mt-3">Find a book</h2>
      <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">@</span>
        <input type="text" class="form-control search_author" placeholder="find by author" aria-label="Username" aria-describedby="basic-addon1">
      </div>
      <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">@</span>
        <input type="text" class="form-control search_title" placeholder="find by title" aria-label="Username" aria-describedby="basic-addon1">
      </div>

      <div class="input-group">
        <select class="form-select genre-filter" id="inputGroupSelect04" aria-label="multiple select example">
          <option selected>Choose...</option>
          <option value="6134a04c60de4e15a6e086b5">Поэзия</option>
          <option value="6134a04c60de4e15a6e086b6">повесть</option>
          <option value="6134a04c60de4e15a6e086b7">ужастик</option>
          <option value="6134a04c60de4e15a6e086b8">юмор</option>
          <option value="6134a04c60de4e15a6e086b2">фантастика</option>
          <option value="6134a04c60de4e15a6e086b4">сказка</option>
          <option value="6134a04c60de4e15a6e086b3">приключения</option>
        </select>
      </div>

      <button type="submit" class="btn btn-primary col-12 mt-3">Search</button>
    </form>
    
    
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="javascripts/form.js"></script>
  </body>
</html>

