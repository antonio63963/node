<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="stylesheets/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <title>admin</title>
</head>

<body>
  <div class="container">
    <div class="row">
      <h1 class="offset-3 ">Admin</h1>
    </div>
    <!-- Navigation -->
    <div class="row mb-3">
      <nav class="navbar navbar-expand-lg navbar-light bg-light col-6 offset-3">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Admin</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">Genres</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Authors</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Books</a>
              </li>

            </ul>
          </div>
        </div>
      </nav>
    </div>

    <!-- genres list -->
    <div class="row offset-3">
      <h3>Genres</h3>
    </div>
    <div class="row offset-3 col-6 mb-3 overflow-auto generalList-wrapper">
      <ul class="list-group genresList">
        <% genres.forEach( genre => { %>
        <li class="list-group-item" data-genre="<%= genre.id%>"><%=genre.name %></li>
        <% }) %>

      </ul>
    </div>
    <div class="row">
      <h3 class="offset-3">Add the new genre</h3>
      <form name="genre" class="col-6 offset-3 mb-2">

        <div class="input-group  mb-3">
          <input type="text" class="form-control addNewGenre" placeholder="add new genre"
            aria-label="Recipient's username" aria-describedby="basic-addon2">
          <span class="input-group-text" id="basic-addon2">new genre</span>
        </div>
        <button type="submit" class="btn btn-primary">add Genre</button>
      </form>
      <hr class="col-6 offset-3">
      <!-- Authors -->
      <!-- <div class="searchAuthor col-6 offset-4" >
        <div class="d-flex justify-content-end">
          <span class="ml-3">x</span>
        </div>
        <ul class="list-group searchAuthor_list">
          <!-- <li class="list-group-item">An item</li>
          <li class="list-group-item">A second item</li>
          <li class="list-group-item">A third item</li>
          <li class="list-group-item">A fourth item</li>
          <li class="list-group-item">And a fifth one</li> -->
        </ul>
      </div> -->
      
      <div class="row offset-3 mt-3">
        <h3>Authors</h3>
      </div>
      <form name="authors" class="col-6 offset-3 mb-3">
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon1">@</span>
          <input type="text" class="form-control authorID" placeholder="add new author" aria-label="Username"
          aria-describedby="basic-addon1">
        </div>
        <button type="submit" class="btn btn-primary addBook">add Author</button>
      </form>
      <hr class="col-6 offset-3">

      <!-- Books -->
      <div class="row offset-3 mt-3">
        <h3>Books</h3>
      </div>
      <form name="books" class="col-6 offset-3">
        <h5>Title:</h5>
        <div class="input-group flex-nowrap">
          <span class="input-group-text" id="addon-wrapping">@</span>
          <input type="text" class="form-control titleInput" placeholder="Title" aria-label="Title" aria-describedby="addon-wrapping">
        </div>
        <!-- SEARCH RESULT -->
        <div class="searchAuthor-book col-6 offset-4" >
          <div class="d-flex justify-content-end">
            <span class="ml-3 pointer">x</span>
          </div>
          <ul class="list-group searchAuthor-book_list">
            <!-- <li class="list-group-item">An item</li>
            <li class="list-group-item">A second item</li>
            <li class="list-group-item">A third item</li>
            <li class="list-group-item">A fourth item</li>
            <li class="list-group-item">And a fifth one</li> -->
          </ul>
        </div>

        <h5>Search author ID by name:</h5>
        <div class="input-group mb-1">
          <input type="text" class="form-control searchAuthorInput" placeholder="Enter the author name" aria-label="search" aria-describedby="button-addon2">
          <button class="btn btn-outline-secondary searchAuthorBtn" type="button" id="button-addon2">Search</button>
        </div>

        <h5>Author ID: ...</h5>
        <div class="author-id"></div>

        <h5>Description:</h5>
        <div class="input-group flex-nowrap mb-3">
          <span class="input-group-text" id="addon-wrapping">@</span>
          <input type="text" class="form-control descriptionInput" placeholder="description" aria-label="Description" aria-describedby="addon-wrapping">
        </div>
        <h5>Select genres</h5>
        <div class="input-group mb-4">
          <select class="form-select selectGenre" multiple id="inputGroupSelect04" aria-label="multiple select example">
            <option selected>Choose...</option>
            <% genres.forEach( genre => { %>
              <option value="<%= genre.id%>"><%=genre.name %></option>
            <% }) %>
          </select>
        </div>
        <h5>Book's genres: ...</h5>
        <div class="bookGenres"></div>

        <h5>Pic URL:</h5>
        <div class="input-group flex-nowrap mb-3">
          <span class="input-group-text" id="addon-wrapping">@</span>
          <input type="text" class="form-control picInput" placeholder="pic url" aria-label="Description" aria-describedby="addon-wrapping">
        </div>

        <!-- <div class="input-group mb-3">
          <input type="file" name="bookFile" class="form-control book_file" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload">
        </div> -->
        <button type="submit" class="btn btn-primary">add Book</button>
      </form>

    </div>

  </div>





  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="javascripts/admin.js"></script>
</body>

</html>